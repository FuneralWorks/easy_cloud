{% extends "Admin/card_container.html.twig" %}


{% block card_header %}
    <h1>Subscriptions list</h1>
{% endblock card_header %}


{% block card_body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Startdate</th>
                <th>Monthduration</th>
                <th>Sapcontractnumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for subscription in subscriptions %}
            <tr>
                <td><a href="{{ path('subscriptions_show', { 'id': subscription.id }) }}">{{ subscription.id }}</a></td>
                <td>{{ subscription.name }}</td>
                <td>{% if subscription.startDate %}{{ subscription.startDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ subscription.monthDuration }}</td>
                <td>{{ subscription.sapContractNumber }}</td>
                <td>
                            <a class="btn btn-primary" href="{{ path('subscriptions_show', { 'id': subscription.id }) }}">show</a>
                            <a class="btn btn-outline-primary" href="{{ path('subscriptions_edit', { 'id': subscription.id }) }}">edit</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <a class="btn btn-success" href="{{ path('subscriptions_new') }}">Create a new subscription</a>
{% endblock card_body %}