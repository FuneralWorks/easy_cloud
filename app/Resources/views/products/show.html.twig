{% extends "Admin/card_container.html.twig" %}


{% block card_header %}
    <h1>Product</h1>
{% endblock card_header %}


{% block card_body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ product.designation }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('products_index') }}">Back to the list</a>
    <a class="btn btn-primary" href="{{ path('products_edit', { 'id': product.id }) }}">Edit</a> {{ form_start(delete_form)
    }}
    <input class="btn btn-danger" type="submit" value="Delete"> {{ form_end(delete_form) }}
                    
{% endblock card_body %}