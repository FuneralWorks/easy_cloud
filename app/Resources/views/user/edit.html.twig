{% extends "Admin/card_container.html.twig" %}


{% block card_header %}
    <h1>Modification Utilisateur</h1>
{% endblock card_header %}


{% block card_body %}
    {{ form_start(edit_form) }}
    <div class="row"> 
        <div class="col-sm-1">
            {{ form_label(edit_form.login)}}
        </div>
        <div class="col-sm-9">
            {{ form_widget(edit_form.login) }}
        </div>
    </div>
    <div class="row"> 
        <div class="col-sm-1">
            {{ form_label(edit_form.password)}}
        </div>
        <div class="col-sm-9">
            {{ form_widget(edit_form.password) }}
        </div>
    </div>
    <div class="row"> 
        <div class="col-sm-1">
            {{ form_label(edit_form.email)}}
        </div>
        <div class="col-sm-9">
            {{ form_widget(edit_form.email) }}
        </div>
    </div>
    <div class="row"> 
        <div class="col-sm-1">
            {{ form_label(edit_form.firstName)}}
        </div>
        <div class="col-sm-9">
            {{ form_widget(edit_form.firstName) }}
        </div>
    </div>
    <div class="row"> 
        <div class="col-sm-1">
            {{ form_label(edit_form.lastName)}}
        </div>
        <div class="col-sm-9">
            {{ form_widget(edit_form.lastName) }}
        </div>
    </div>
    <div class="row"> 
        <div class="col-sm-1">
            {{ form_label(edit_form.userRoles)}}
        </div>
        <div class="col-sm-9">
            {{ form_widget(edit_form.userRoles) }}
        </div>
    </div>
       
{% endblock card_body %}

