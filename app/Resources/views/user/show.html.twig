{% extends "Admin/card_container.html.twig" %}


{% block card_header %}
    <h1>Utilisateurs</h1>
{% endblock card_header %}


{% block card_body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.userRoles %}
                        {{ role }}
                    {% endfor %}
                </td>
            </tr>

            
        </tbody>
    </table>

    
 {% endblock card_body %}

{% block card_footer %}
    <a href="{{ path('user_index') }}">Retour à la liste</a>

    <a class="btn btn-outline-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Editer</a>

    {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Supprimer">
    {{ form_end(delete_form) }}
{% endblock card_footer %}
