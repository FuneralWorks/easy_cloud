{% extends "Admin/card_container.html.twig" %}


{% block card_header %}
    <h1>Création Utilisateur </h1>
{% endblock card_header %}


{% block card_body %}
    
    {{ form_start(form) }} 
    <div class="form-group row">
        <label class="col-md-1" for="login">{{ form_label(form.login) }}</label>
        <div class="col-md-9">{{ form_widget(form.login) }}</div>
    </div>

    <div class="form-group row">
        <label class="col-md-1" for="email">{{ form_label(form.email) }}</label>
        <div class="col-md-9">{{ form_widget(form.email) }}</div>
    </div>

    <div class="form-group row">
        <label class="col-md-1" for="lastName">{{ form_label(form.lastName) }}</label>
        <div class="col-md-9">{{ form_widget(form.lastName) }}</div>
    </div>

    <div class="form-group row">
        <label class="col-md-1" for="firstName">{{ form_label(form.firstName) }}</label>
        <div class="col-md-9">{{ form_widget(form.firstName) }}</div>
    </div>
    
    <div class="form-group row">
        <label class="col-md-1" for="password">{{ form_label(form.password) }}</label>
        <div class="col-md-9">{{ form_widget(form.password) }}</div>
    </div>

    <div class="form-group row">
        <label class="col-md-1" for="userRoles">{{ form_label(form.userRoles) }}</label>
        <div class="col-md-9">{{ form_widget(form.userRoles) }}</div>
    </div>
    

    
{% endblock card_body %}

{% block card_footer %}
    <a href="{{ path('user_index') }}">Retour à la liste</a>
   <input class="btn btn-success" type="submit" value="Créer" /> {{ form_end(form) }}

    
{% endblock card_footer %}