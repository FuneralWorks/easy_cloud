{% extends "Admin/card_container.html.twig" %}

{% block card_header %}
    <h1>Client</h1>
{% endblock card_header %}



{% block card_body %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ client.description }}</td>
            </tr>
        </tbody>
    </table>


            <a href="{{ path('clients_index') }}">Back to the list</a>
            <a class="btn btn-primary" href="{{ path('clients_edit', { 'id': client.id }) }}">Edit</a>
            
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        
{% endblock card_body %}
