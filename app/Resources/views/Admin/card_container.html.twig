{% extends 'base.html.twig' %}

{% block body %}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h1>{% block card_header %}{% endblock card_header %}</h1>
                </div>
                <div class="card-block">
                {% block card_body %}{% endblock card_body %}
                </div>
                <div class="card-footer" style="display: inline-block;">
                    {% block card_footer %}{% endblock card_footer %}
                </div>
            </div>
        </div>
    </div>
</div>

    
{% endblock body %}